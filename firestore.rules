rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection - only admins can modify user data
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if isAdmin(request.auth.uid);
    }
    
    // Transactions collection
    match /transactions/{docId} {
      allow read: if isActiveUser();
      allow create: if isActiveUser() && canEditTransactions();
      allow update: if isActiveUser() && canEditTransactions() && (resource.data.userId == request.auth.uid || isAdmin(request.auth.uid));
      allow delete: if isActiveUser() && isAdmin(request.auth.uid);
    }
    
    // Notes collection
    match /notes/{docId} {
      allow read: if isActiveUser();
      allow create: if isActiveUser() && canEditNotes();
      allow update: if isActiveUser() && canEditNotes() && (resource.data.userId == request.auth.uid || isAdmin(request.auth.uid));
      allow delete: if isActiveUser() && isAdmin(request.auth.uid);
    }
    
    // Receipts collection
    match /receipts/{docId} {
      allow read: if isActiveUser();
      allow create: if isActiveUser() && canUploadReceipts();
      allow update: if isActiveUser() && canUploadReceipts() && (resource.data.userId == request.auth.uid || isAdmin(request.auth.uid));
      allow delete: if isActiveUser() && isAdmin(request.auth.uid);
    }
    
    // Archive collection
    match /archive/{docId} {
      allow read: if isActiveUser();
      allow create: if isActiveUser() && (canEditTransactions() || canEditNotes());
      allow update: if isActiveUser() && isAdmin(request.auth.uid);
      allow delete: if isActiveUser() && isAdmin(request.auth.uid);
    }
    
    // Helper functions
    function isAdmin(uid) {
      return get(/databases/$(database)/documents/users/$(uid)).data.role == 'admin';
    }
    
    function isActiveUser() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isActive == true;
    }
    
    function canEditTransactions() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.customPermissions.canEditTransactions == true;
    }
    
    function canEditNotes() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.customPermissions.canEditNotes == true;
    }
    
    function canUploadReceipts() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.customPermissions.canUploadReceipts == true;
    }
  }
} 